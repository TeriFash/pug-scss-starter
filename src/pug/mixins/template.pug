mixin top-title($icon, $title, $info, $classes)
  .ab-title.ab-title-card.uk-panel.uk-light.uk-margin-medium(class=$classes)
    if $icon
      img(src=$icon alt="")
    //- else 
    //-   img(src='img/resourse/power-off.png' alt="")
    if $title  
        h2.uk-card-title=$title
    else
        h2.uk-card-title Title not found    
    if $info 
      p=$info
    //- else 
    //-   p Nothing Found